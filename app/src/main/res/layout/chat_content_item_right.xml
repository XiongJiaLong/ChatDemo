<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:textSize="15sp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginLeft="50dp"
        android:minWidth="50dp"
        android:minHeight="40dp"
        android:layout_alignTop="@+id/tv_right_tag"
        android:gravity="center_vertical"
        android:id="@+id/tv_right_content"
        android:layout_marginRight="10dp"
        android:background="@drawable/chat_item_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tv_right_tag"/>

    <TextView
        android:layout_alignParentRight="true"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_right_tag"
        android:gravity="center"
        android:background="@drawable/chat_msg_name_bg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        />

</RelativeLayout>